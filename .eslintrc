{
  "root": true,
  "env": {
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:vue/essential"],
  "rules": {
    // to enable additional rules
    "semi": ["error", "never"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "linebreak-style": ["error", "unix"],
    "indent": ["error", 2, { "VariableDeclarator": "first", "SwitchCase": 1 }]
  }
}
